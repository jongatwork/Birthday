<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_big"
    android:layout_marginRight="@dimen/margin_big"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium">

    <RelativeLayout
        android:id="@+id/person_picture_layout"
        android:layout_width="@dimen/person_picture_list_item_width"
        android:layout_height="@dimen/person_picture_list_item_width"
        android:background="@drawable/person_picture_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/person_picture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VP"
            style="@style/itemPersonInitials"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/person_picture_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_big"
        style="@style/itemName"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/person_picture_layout"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/itemDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>

